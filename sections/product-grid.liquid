<div class="product-grid-section section-padding" style="background: {{ section.settings.bg_color }};">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="section-heading text-center mb-8">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="product-grid" style="
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 24px;
    ">
      {% for product in collection.products limit: section.settings.products_per_page %}
        <div class="product-card">
          <a href="{{ product.url }}" class="product-card-link">
            <div class="product-image-wrapper">
              {% if product.featured_image %}
                <img 
                  src="{{ product.featured_image | image_url: width: 400 }}" 
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="400"
                  style="width: 100%; height: auto; object-fit: cover; border-radius: 8px;">
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="product-info" style="padding: 12px 0;">
              <h3 class="product-title" style="font-size: 1rem; font-weight: 600; margin: 0 0 4px;">{{ product.title }}</h3>
              <p class="product-price" style="font-size: 0.875rem; color: #666; margin: 0;">{{ product.price | money }}</p>
            </div>
          </a>
        </div>
      {% endfor %}
    </div>

    {% if collection.products.size > section.settings.products_per_page %}
      <div class="text-center mt-8">
        <a href="{{ collection.url }}" class="btn">View All</a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .product-card {
    transition: transform 0.2s ease;
  }
  .product-card:hover {
    transform: translateY(-4px);
  }
  .product-card-link {
    text-decoration: none;
    color: inherit;
  }
  .section-padding {
    padding: 3rem 0;
  }
</style>

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": ""
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 4,
      "max": 24,
      "step": 4,
      "default": 12,
      "label": "Products per page"
    },
    {
      "type": "color",
      "id": "bg_color",
      "default": "#ffffff",
      "label": "Background Color"
    }
  ],
  "presets": [
    {
      "name": "Product Grid"
    }
  ]
}
{% endschema %}
