<header class="site-header flex items-center">
  <div class="container w-full flex justify-between items-center">
    <div class="site-logo">
      <a href="/" class="flex items-center">
        <span style="font-weight: 900; font-size: 1.5rem; color: var(--color-accent);">miyagi</span>
      </a>
    </div>

    <nav class="site-nav flex items-center">
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}" class="nav-link">{{ link.title }}</a>
      {% endfor %}
      <a href="/cart" class="nav-link relative">
        cart [{{ cart.item_count }}]
      </a>
    </nav>
  </div>
</header>

<script>
  window.addEventListener('scroll', () => {
    const header = document.querySelector('.site-header');
    if (window.scrollY > 50) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": []
}
{% endschema %}
